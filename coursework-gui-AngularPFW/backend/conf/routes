# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#All Getter Methods
GET     /pointstable                   coursework.ClubController.returnAllClubs
GET     /pointstable/winfilter         coursework.ClubController.winSortClubFilter
GET     /pointstable/goalfilter        coursework.ClubController.goalSortClubFilter
GET     /pointstable/playmatch         coursework.MatchController.playMatch
GET     /clubs/*clubName               coursework.ClubController.returnSelectedClub(clubName : String)
GET     /allmatches/*arrIndex          coursework.MatchController.returnSelectedMatch(arrIndex : Integer)
GET     /allmatches                    coursework.MatchController.returnAllMatches
GET     /specificMatches/*date         coursework.MatchController.returnMatchesOnDate(date : String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)