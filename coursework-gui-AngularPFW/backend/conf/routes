# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#All Getter Methods
GET     /pointstable                controllers.ClubController.returnAllClubs
GET     /pointstable/winfilter      controllers.ClubController.winSortClubFilter
GET     /pointstable/goalfilter     controllers.ClubController.goalSortClubFilter
GET     /pointstable/playmatch      controllers.MatchController.playMatch
GET     /clubs/*clubName            controllers.ClubController.returnSelectedClub(clubName : String)
GET     /allmatches/*arrIndex       controllers.MatchController.returnSelectedMatch(arrIndex : Integer)
GET     /allmatches                 controllers.MatchController.returnAllMatches
GET     /specificMatches/*date      controllers.MatchController.returnMatchesOnDate(date : String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)